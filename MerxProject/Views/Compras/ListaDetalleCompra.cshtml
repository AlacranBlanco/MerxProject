@model IEnumerable<MerxProject.Models.DetalleCompra>

@{
    Layout = null;
}

<style>
    .accordion {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
    }

        .active, .accordion:hover {
            background-color: #ccc;
        }

    .panel {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-xs-12" id="myModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@ViewBag.title</h4>
                    </div>
                    <div class="modal-body">
                        @if (Model != null)
                        {
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Tipo")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Artículo")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cantidad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Unidad)
                                    </th>
                                    <th>
                                        @Html.DisplayName("Precio Unitario")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Precio Total")
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Herramienta != null)
                                            {
                                                @Html.Label("Herramienta")
                                            }
                                            @if (item.MateriaPrima != null)
                                            {
                                                @Html.Label("Materia Prima")
                                            }
                                        </td>
                                        <td>
                                            @if (item.Herramienta != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Herramienta.Nombre)
                                            }
                                            @if (item.MateriaPrima != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.MateriaPrima.Nombre)
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Unidad)
                                        </td>
                                        <td>
                                            $
                                            @if (item.Herramienta != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.PrecioUnitario, item.Herramienta.Precio)
                                            }
                                            @if (item.MateriaPrima != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.PrecioUnitario, item.MateriaPrima.Precio)
                                            }
                                        </td>
                                        <td>
                                            $ @Html.DisplayFor(modelItem => item.PrecioTotal, item.PrecioUnitario * item.Cantidad)
                                        </td>
                                        <td>
                                            @if (ViewBag.compra.Estatus < 2)
                                            {
                                                <button class="btn btn-primary btn-sm" id="Elimninar" id="delete_@item.Id"
                                                        onclick="createModal('@Url.Action("popUpDetalleCompra", "Compras", new { Id = item.Id, accion = "3", idCompra = ViewBag.compra.Id })')">
                                                    Eliminar
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Monto Total</strong></td>
                                    <td><strong>$ @ViewBag.total</strong></td>
                                </tr>
                            </table>
                        }
                        @if (ViewBag.compra != null)
                        {
                        if (ViewBag.compra.Estatus < 2)
                        {
                            <button class="accordion">Nueva Materia Prima</button>
                            <div class="panel">

                                @Html.Action("popUpDetalleCompra", "Compras", new { Id = ViewBag.compra.Id, accion = "1", tipo = "MP" })
                            </div>

                            <button class="accordion">Nueva Herramienta</button>
                            <div class="panel">

                                @Html.Action("popUpDetalleCompra", "Compras", new { Id = ViewBag.compra.Id, accion = "1", tipo = "H" })
                            </div>
                        }
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" data-keyboard="false" data-backdrop="static" id="idModalUpdate" tabindex="1040"></div>
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="idModalElminar" tabindex="1040"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">

    
    

    function createModal(url) {
        $.get(url, function (data) {
        });

    }

    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        });
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

