@model MerxProject.Models.PaginadorGenerico<MerxProject.Models.Proceso>

@{
    ViewBag.Title = "Lista de Procesos actuales";
    var Tiempo = new List<Tuple<string, TimeSpan>>();
    Tiempo = ViewBag.Tiempo;

}
<link href="~/Content/assets/css/main.css" rel="stylesheet" />
<h2>@ViewBag.Title</h2>
@if (Session["res"] != null)
{
    string color;
    string mensaje = Session["res"].ToString();
    Session.Remove("res");

    if (Session["tipo"] != null)
    {
        color = "#18ce65";
    }
    else
    {
        color = "#cc0001";
    }
    <div class="panel panel-default" id="current-panel">
        <table class="table table-hover">
            <thead>
                <tr style="background-color:@color">
                    <th>
                        <p style="text-align: center">
                            @mensaje
                        </p>
                    </th>
                    <th>
                        <a href="#current-panel" class="close" data-dismiss="alert" aria-label="close" id="hide">
                            &times;
                        </a>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
}
@if (ViewBag.error != null)
{
    string error = ViewBag.error;
    ViewBag.error = null;
    <div class="panel panel-default" id="current-panel">
        <table class="table table-hover">
            <thead>
                <tr style="background-color: #cc0001">
                    <th>
                        <p style="text-align: center">
                            @error
                        </p>
                    </th>
                    <th>
                        <a href="#current-panel" class="close" data-dismiss="alert" aria-label="close" id="hide">
                            &times;
                        </a>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
}
<button class="btn btn-primary btn-sm pull-right" data-toggle="modal" id="Nuevo">Nuevo</button>
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="idModalRegistrar" tabindex="-1" data-url='@Url.Action("popUpProcesos", "Proceso", new { applicationUser = "", accion = "1" })'></div>
<br />

<table class="table">

    <tr>
        <th>
            Id
        </th>
        <th>
            Proceso
        </th>
        <th>
            Producto
        </th>
        <th>
            Tipo de Mueble
        </th>
        <th>
            Tipo de Material
        </th>
        <th>
            Empleado
        </th>
        <th>
            Color
        </th>
        <th>
            Tiempo actual
        </th>
        <th>
            Estado
        </th>
    </tr>
    @foreach (var item in Model.Resultado)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inventario.Producto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inventario.Producto.CategoriaMueble.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inventario.Producto.CategoriaMaterial.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inventario.Color.Nombre)
            <span style="height: 25px; width: 25px; border-radius: 50%; display: inline-block; background-color: @item.Inventario.Color.Codigo;"></span>
        </td>
        <td>
            @foreach(var tiempo in Tiempo)
            {
                if(item.Id == tiempo.Item1)
                {
                    @tiempo.Item2.TotalHours;
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @if (item.Estado == "En espera")
            {
                <button type="submit" class="btn btn-primary btn-sm" data-toggle="modal" id="edit_@item.Id" onclick="@Url.Action("TomarPedido", "Proceso", new { id = item.Id })">Iniciar proceso</button>
            }
            @if (item.Estado == "En proceso")
            {
                <button class="btn btn-primary btn-sm" data-toggle="modal" id="delete_@item.Id" onclick="@Url.Action("popUpProcesos", "Proceso" , new {id=item.Id, accion = "2" })">Siguiente proceso</button>
                <button class="btn btn-primary btn-sm" data-toggle="modal" id="delete_@item.Id" onclick="@Url.Action("popUpProcesos", "Proceso" , new {id=item.Id, accion = "3" })">Pausar</button>
            }
            else if (item.Estado == "Detenido")
            {
                <button class="btn btn-primary btn-sm" data-toggle="modal" id="delete_@item.Id" onclick="@Url.Action("popUpProcesos", "Proceso" , new {id=item.Id, accion = "4" })">Reanudar</button>
            }

        </td>
    </tr>

    }
</table>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#Nuevo').click(function () {
            var url = $('#idModalRegistrar').data('url');
            $.get(url, function (data) {
                $("#idModalRegistrar").html(data);
                $("#idModalRegistrar").modal('show');
            });
        });
    });
    
    

     function GetProd(_parametro) {
        var procemessage = "<option value='0'> Please wait...</option>";
        $("#ddlstate").html(procemessage).show();
        var url = "@Url.Action("ProductoPorParametro", "Proceso")";
        $.ajax({
            url: url,
            data: { Parametro: _parametro },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Selecciona el producto</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#ddlstate").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    function GetInv(_Id) {
        var procemessage = "<option value='0'> Please wait...</option>";
        $("#ddlcity").html(procemessage).show();
        var url = "@Url.Action("InventarioPorId", "Proceso")";
        $.ajax({
            url: url,
            data: { Id: _Id },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Selecciona el color</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#ddlcity").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }

    $(document).keypress(
        function (event) {
            if (event.which == '13') {
                event.preventDefault();
            }
        });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}