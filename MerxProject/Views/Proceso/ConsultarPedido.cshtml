@using MerxProject.Models;
@{
    ViewBag.Title = "Consultar pedido";
    Layout = "~/Views/Shared/_LayoutPagina.cshtml";

}
@if (Session["res"] != null)
{
    string color;
    string mensaje = Session["res"].ToString();
    Session.Remove("res");

    if (Session["tipo"] != null)
    {
        color = "#18ce65";
    }
    else
    {
        color = "#cc0001";
    }
    <div class="panel panel-default" id="current-panel">
        <table class="table table-hover">
            <thead>
                <tr style="background-color:@color">
                    <th>
                        <p style="text-align: center">
                            @mensaje
                        </p>
                    </th>
                    <th>
                        <a href="#current-panel" class="close" data-dismiss="alert" aria-label="close" id="hide">
                            &times;
                        </a>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
}
@if (ViewBag.error != null)
{
    string error = ViewBag.error;
    ViewBag.error = null;
    <div class="panel panel-default" id="current-panel">
        <table class="table table-hover">
            <thead>
                <tr style="background-color: #cc0001">
                    <th>
                        <p style="text-align: center">
                            @error
                        </p>
                    </th>
                    <th>
                        <a href="#current-panel" class="close" data-dismiss="alert" aria-label="close" id="hide">
                            &times;
                        </a>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Buscar pedido</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h5>Ingresa el código que se te dio para ver en qué proceso se encuentra tu pedido</h5>
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                @using (Html.BeginForm("ConsultarPedido", "Proceso", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="text" name="Id" value="" placeholder="Buscar" required class="form-control-lg" />
                    <input type="submit" name="Buscar" value="Buscar" />
                }
            </div>
        </div>
        @if (ViewBag.proceso != null)
        {

            var proceso = new Proceso();
            proceso = ViewBag.proceso;

            if (proceso != null)
            {

                <table class="table">

                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Proceso
                        </th>
                        <th>
                            Producto
                        </th>
                        <th>
                            Tipo de Mueble
                        </th>
                        <th>
                            Tipo de Material
                        </th>
                        <th>
                            Color
                        </th>
                        <th>
                            Tiempo actual
                        </th>
                        <th>
                            Estado
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Inventario.Producto.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Inventario.Producto.CategoriaMueble.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Inventario.Producto.CategoriaMaterial.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Inventario.Color.Nombre)
                            <span style="height: 25px; width: 25px; border-radius: 50%; display: inline-block; background-color: @proceso.Inventario.Color.Codigo;"></span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => proceso.Estado)
                        </td>
                        @if (proceso.Estado == "Finalizado")
                        {
                            <td>
                                <button type="submit" class="btn btn-primary btn-sm" data-toggle="modal" id="edit_@proceso.Id" onclick="@Url.Action("TomarPedido", "Proceso", new { id = proceso.Id })">Recibí mi pedido</button>
                            </td>
                        }
                    </tr>
                </table>
            }
        }
    </div>
</main>