    <div class="container text-center position-relative align-content-center justify-content-center " data-aos="fade-in" data-aos-delay="200">
        <div class="container text-center position-relative" data-aos="fade-in" data-aos-delay="200">
            <h1>Tienda Merx</h1>
        </div>
    </div>
</section><!-- End Hero -->
<!-- ======= Clients Section ======= -->
<section id="" class="clients">
    <div class="container">
        <div class="row">
            <div class="breadcrumb">
                <a href="@Url.Action("Index", "Home")" class="breadcrumb-item">Inicio</a>
                <a href="#" class="breadcrumb-item">Tienda Virtual</a>
            </div>
        </div>
    </div>
</section><!-- End Clients Section -->
<section class="about d-flex align-items-center justify-content-center" style="padding:2px; background-color: #f6f6f7">
    <div class="container text-center position-relative align-content-center justify-content-center " data-aos="fade-in" data-aos-delay="200">
        <div class="container text-center position-relative" data-aos="fade-in" data-aos-delay="200">
            <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active text-center">
                        <img class="d-block img-fluid " src="~/Content/assets/img/Banner/promo.jpg" alt="First slide" style="background-attachment: fixed; background-size: cover;">
                    </div>
                    <div class="carousel-item text-center">
                        <img class="d-block img-fluid " src="~/Content/assets/img/Banner/img1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item text-center">
                        <img class="d-block img-fluid " src="~/Content/assets/img/Banner/img2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        @if (ViewBag.alert != null)
        {
            <div class="alert alert-danger alert-dismissible" style="z-index: 3;">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>No encontrado</strong> La búsqueda no dio resultados.
            </div>
        }
    </div>
</section>
<div class="super_container">
    <div class="super_container_inner">
        <div class="super_overlay"></div>
        <!-- Products -->

        <div class="products">
            <div class="container">
                <div class="row products_bar_row">
                    <div class="col">
                        <div class="products_bar d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-start justify-content-center">
                            <div class="products_bar_links">
                                <ul class="d-flex flex-row align-items-start justify-content-start">
                                    <li><a href="#">All</a></li>
                                    <li><a href="#">Hot Products</a></li>
                                    <li class="active"><a href="#">New Products</a></li>
                                    <li><a href="#">Sale Products</a></li>
                                </ul>
                            </div>
                            <div class="products_bar_side d-flex flex-row align-items-center justify-content-start ml-lg-auto">
                                <div class="products_dropdown product_dropdown_sorting">
                                    <div class="isotope_sorting_text"><span>Default Sorting</span><i class="fa fa-caret-down" aria-hidden="true"></i></div>
                                    <ul>
                                        <li class="item_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'>Default</li>
                                        <li class="item_sorting_btn" data-isotope-option='{ "sortBy": "price" }'>Price</li>
                                        <li class="item_sorting_btn" data-isotope-option='{ "sortBy": "name" }'>Name</li>
                                    </ul>
                                </div>
                                <div class="product_view d-flex flex-row align-items-center justify-content-start">
                                    <div class="view_item active"><img src="~/Content/ProductAssets/images/view_1.png" alt=""></div>
                                    <div class="view_item"><img src="~/Content/ProductAssets/images/view_2.png" alt=""></div>
                                    <div class="view_item"><img src="~/Content/ProductAssets/images/view_3.png" alt=""></div>
                                </div>
                                <div class="products_dropdown text-right product_dropdown_filter">
                                    <div class="isotope_filter_text"><span>Filter</span><i class="fa fa-caret-down" aria-hidden="true"></i></div>
                                    <ul>
                                        <li class="item_filter_btn" data-filter="*">All</li>
                                        <li class="item_filter_btn" data-filter=".hot">Hot</li>
                                        <li class="item_filter_btn" data-filter=".new">New</li>
                                        <li class="item_filter_btn" data-filter=".sale">Sale</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product -->

                <div class="row products_row products_container grid">
                    @for (int h = start; h < Model.ProductoCollection.Count; h++)
                    {

                        i++;




                        if (i <= 5)
                        {
                            idAux++;
                            idAux2++;
                            <div class="col-xl-4 col-md-6 grid-item new">
                                <div class="product">
                                    <div class="product_image"><img src="@Url.Content(Model.ProductoCollection[h].Imagen)" alt=""></div>
                                    <div class="product_content">
                                        <div class="product_info d-flex flex-row align-items-start justify-content-start">
                                            <div>
                                                <div>
                                                    @*<div class="product_name"><a href="https://localhost:44309/Producto/Bamboo1">@Model[h].Nombre</a></div>*@
                                                    <div class="product_name"><a href="@Url.Action("Bamboo1", "Producto", new { name = Model.ProductoCollection[h].Nombre })">@Model.ProductoCollection[h].Nombre</a></div>
                                                </div>
                                            </div>
                                            <div class="ml-auto text-right">
                                                <div class="rating_r rating_r_4 home_item_rating"><i></i><i></i><i></i><i></i><i></i></div>
                                                <div class="product_price text-right">$@Model.ProductoCollection[h].Precio</div>
                                            </div>
                                        </div>
                                        <div class="product_buttons">
                                            <div class="text-right d-flex flex-row align-items-start justify-content-start">
                                                <div class="product_button product_fav text-center d-flex flex-column align-items-center justify-content-center">

                                                    @if (Model.ProductoCollection[h].Id == Model.ProductosFavId[h])
                                                    {
                                                        idxFavorito++;
                                                        using (Html.BeginForm("AgregarProductoFavorito", "Producto", FormMethod.Post, new { id = idAux }))
                                                        {
                                                            <input type="hidden" name="id" value=@Model.ProductoCollection[h].Id id=@idAux>
                                                            <input type="hidden" name="accion" value="2" id=@idAux>
                                                            <input type="hidden" name="pagi" value=@ViewBag.pagina id=@idAux>
                                                            <a id=@idAux name=@idAux href="" onclick="$('#@idAux').submit(); return false;">
                                                                @*<a id=@idAux name=@idAux href="@Url.Action("AgregarProductoFavorito", "Producto", new { id = Model[h].Id })">*@

                                                                <div>
                                                                    <div>

                                                                        <img src="~/Content/ProductAssets/images/heart1.png" class="img" />
                                                                    </div>
                                                                </div>

                                                            </a>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        using (Html.BeginForm("AgregarProductoFavorito", "Producto", FormMethod.Post, new { id = idAux }))
                                                        {
                                                            <input type="hidden" name="id" value=@Model.ProductoCollection[h].Id id=@idAux>
                                                            <input type="hidden" name="accion" value="1" id=@idAux>
                                                            <input type="hidden" name="pagi" value=@ViewBag.pagina id=@idAux>
                                                            <a id=@idAux name=@idAux href="" onclick="$('#@idAux').submit(); return false;">
                                                                @*<a id=@idAux name=@idAux href="@Url.Action("AgregarProductoFavorito", "Producto", new { id = Model[h].Id })">*@

                                                                <div>
                                                                    <div>

                                                                        <img src="~/Content/ProductAssets/images/heart.svg" class="svg" />
                                                                    </div>
                                                                </div>

                                                            </a>
                                                        }
                                                    }

                                                </div>
                                                <div class="product_button product_cart text-center d-flex flex-column align-items-center justify-content-center">
                                                    @using (Html.BeginForm("AgregarProductoFavorito", "Producto", FormMethod.Post, new { id = idAux2 }))
                                                    {
                                                        @*<a href='@Url.Action("MisDirecciones", "Manage", new { id = item.Id, accion = 3 })'>*@
                                                        <input type="hidden" name="id" value=@Model.ProductoCollection[h].Id id=@idAux2>
                                                        <input type="hidden" name="accion" value="3" id=@idAux2>
                                                        <a id=@idAux2 name=@idAux2 href="" onclick="$('#@idAux2').submit(); return false;">

                                                            <div>
                                                                <div>

                                                                    <img src="~/Content/ProductAssets/images/cart.svg" class="svg" />
                                                                </div>
                                                            </div>

                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        if (i == 5)
                        {
                            break;
                        }

                    }

                </div>
                <div class="row page_nav_row">
                    <div class="col">
                        <div class="page_nav">
                            <ul class="d-flex flex-row align-items-start justify-content-center">
                                <li><a href="@Url.Action("Tienda", "Producto", new { pag = 1})"><<</a></li>
                                <li><a href="@Url.Action("Tienda", "Producto", new { pag = ViewBag.pagina - 1})"><</a></li>

                                @if (myList.Count == ViewBag.pagina)
                                {
                                    <li><a style="color:#2fce98">1</a></li>
                                    <li><a style="color:#2fce98">...</a></li>
                                    <li class="active"><a href="@Url.Action("Tienda", "Producto", new { pag = ViewBag.pagina })">@ViewBag.pagina</a></li>
                                }
                                else if (myList.Count > 1)
                                {
                                    <li class="active"><a href="@Url.Action("Tienda", "Producto", new { pag = ViewBag.pagina })">@ViewBag.pagina</a></li>
                                    <li><a style="color:#2fce98">...</a></li>
                                    <li><a style="color:#2fce98">@myList.Count</a></li>
                                }
                                else
                                {
                                    <li class="active"><a href="@Url.Action("Tienda", "Producto", new { pag = ViewBag.pagina })">@ViewBag.pagina</a></li>
                                }


                                @*@{
                                        posAux = 0;
                                    }
                                    @for (int j = 1; j <= myList.Count; j++)
                                    {


                                        if (myList[posAux] == start)
                                        {

                                            <li class="active"><a href="@Url.Action("Tienda", "Producto", new { pag = k })">@k</a></li>
                                            k++;
                                            posAux++;
                                        }
                                        else
                                        {

                                            <li><a href="@Url.Action("Tienda", "Producto", new { pag = k })">@k</a></li>
                                            k++;
                                            posAux++;
                                        }

                                    }*@
                                <li><a href="@Url.Action("Tienda", "Producto", new { pag = ViewBag.pagina + 1})">></a></li>
                                <li><a href="@Url.Action("Tienda", "Producto", new { pag = @myList.Count })">>></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

