@using MerxProject.Models.TiendaViewModels
@model TiendaViewModel

@{
    ViewBag.Title = "Tienda Virtual";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
    int i = 0, k = 1, finalAux = 5, start = 0;
    List<int> myList = new List<int>();
    myList.Add(0);
    int posAux = 1;
    int idAux = 0, idAux2 = 6;
    int pagActual = ViewBag.pagina - 1;
    int idxFavorito = 0;
}
<script src="~/Content/ProductAssets/js/jquery-3.2.1.min.js"></script>

@if (ViewBag.NoLogIn == 0)
{
    <script>

      
        $(document).ready(function () {
            Swal.fire(
                'Espera!',
                'Sólo puede tener 4 direcciones por cuenta, elimina o edita alguna dirección',
                'warning'
            )
        });


    </script>
}




@for (int o = 1; o <= Model.ProductoCollection.Count; o++)
{
    if (o % 5 == 0)
    {
        myList.Add(finalAux);
        finalAux += 5;
    }
}

@{
    start = myList[pagActual];
}


<title>Muebleria Merx - Tienda Virtual</title>
<!-- Custom styles for this template -->
<link href="~/Content/assets/vendor/bootstrap/css/shop-homepage.css" rel="stylesheet">

<!-- ======= Hero Section ======= -->
