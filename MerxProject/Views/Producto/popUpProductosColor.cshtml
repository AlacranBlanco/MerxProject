@model MerxProject.Models.Inventario

@{
    Layout = null;
    int i = 0;
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@ViewBag.title</h4>
                        <h5 class="modal-header">@ViewBag.Subtitle</h5>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("popUpProductosColor", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Color, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @foreach (var item in Model.Color.Codigo)
                                    {
                                        i += 1;
                                        <span class="dot" style="background-color:@item"></span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @if (i >= 4)
                            {
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <select name="color" class="form-control">
                                            @foreach (var item in ViewBag.Colores)
                                            {
                                                <option value="@item.Id">Codigo</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-10">
                                        <input type="number" value="0" placeholder="Cantidad" min="0" name="cantidad" id="cantidad"/>
                                        <input type="submit" value="Agregar" class="btn btn-default"/>
                                    </div>
                                </div>
                            }

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="hidden" name="productos" value="@Model.Producto" />
                                    <input type="submit" value="Editar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
