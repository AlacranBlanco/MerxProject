                    <!-- Uncomment below if you prefer to use an image logo -->
                    <a href="@Url.Action("Index","Home")"><img src="~/Content/assets/img/logo.png" alt="" class="img-fluidMerx"></a>
                </div>

                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @style = "display:inline;" }))
                {
                    <nav class="nav-menu d-none d-lg-block">
                        <ul style="white-space:nowrap;">
                            <li class="active"><a href="#header">Inicio</a></li>
                            <li><a href="#about">Acerca de nosotros</a></li>
                            <li><a href="#services">Servicios</a></li>
                            <li><a href="@Url.Action("Tienda", "Producto")">Tienda</a></li>
                            <li><a href="@Url.Action("ConsultarPedido", "Proceso")">Pedido</a></li>
                            <li><a href="#contact">Contacto</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                string Nombre = "Usuario";
                                if (Session["user"] != null)
                                {
                                    Nombre = Session["user"].ToString();

                                    if (Nombre.Contains('@'))
                                    {
                                        Nombre = Nombre.Substring(0, Nombre.IndexOf('@'));
                                    }
                                }
                                <li>
                                    @Html.ActionLink("Hola " + Nombre + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                </li>
                                <li style="display: inline">
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Salir</a>
                                </li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Registrarse", "Login", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            }
                        </ul>
                    </nav><!-- .nav-menu -->
                }
            </div><!-- End Header Container -->
        </div>
    </header><!-- End Header -->
