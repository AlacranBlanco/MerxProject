    Layout = null;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <title>Checkout</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Little Closet template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/ProductAssets/styles/bootstrap-4.1.2/bootstrap.min.css">
    <link href="~/Content/ProductAssets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/ProductAssets/styles/checkout.css">
    <link rel="stylesheet" type="text/css" href="~/Content/ProductAssets/styles/checkout_responsive.css">
</head>
<body>


    <div class="super_container">

        <!-- Header -->

        <header class="header">
            <div class="header_overlay"></div>
            <div class="header_content d-flex flex-row align-items-center justify-content-start">
                <div class="logo">
                    <a href="#">
                        <div class="d-flex flex-row align-items-center justify-content-start">
                            <div><a href="../Home/Index"><img src="~/Content/assets/img/logo.png" alt="" max-width="100px" height="40"></a></div>
                        </div>
                    </a>
                </div>
                
                <div class="header_right d-flex flex-row align-items-center justify-content-start ml-auto">


                    <!-- User -->
                    <div class="user"><a href="@Url.Action("Index", "Manage")"><div><img src="~/Content/ProductAssets/images/user.svg" alt="https://www.flaticon.com/authors/freepik"><div>1</div></div></a></div>
                    <!-- Cart -->
                    <div class="cart"><a href="cart.html"><div><img src="~/Content/ProductAssets/images/cart.svg" alt="https://www.flaticon.com/authors/freepik"></div></a></div>
                    <!-- Phone -->
                    <div class="header_phone d-flex flex-row align-items-center justify-content-start">
                        <div><div><img src="~/Content/ProductAssets/images/phone.svg" alt="https://www.flaticon.com/authors/freepik"></div></div>
                        <div>+1 912-252-7350</div>
                    </div>
                </div>
            </div>
        </header>

        <div class="super_container_inner">
            <div class="super_overlay"></div>

            <!-- Home -->

            <div class="home">
                <div class="home_container d-flex flex-column align-items-center justify-content-end">
                    <div class="home_content text-center">
                        <div class="home_title">Direcciones</div>
                        <div class="breadcrumbs d-flex flex-column align-items-center justify-content-center">
                            <ul class="d-flex flex-row align-items-start justify-content-start text-center">
                                <li><a href="../Manage">Mi cuenta</a></li>
                                <li>Direcciones</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Checkout -->

            <div class="checkout">
                <div class="container">

                    <!-- Billing -->
                    <div class="billing">
                        <div class="checkout_title">Agregar una nueva dirección</div>
                        <div class="checkout_form_container">
                            @using (Html.BeginForm("Direcciones", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "register-form", role = "login-form" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div>
                                    <!-- Name -->
                                    @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "checkout_input", @placeholder = "Nombre Completo", @required = "required" })

                                </div>

                                <br />
                                <div>
                                    <!-- Address -->
                                    @Html.TextBoxFor(m => m.DirCalle, new { @class = "checkout_input", @placeholder = "Dirección de Calle", @required = "required" })
                                    @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "checkout_input checkout_address_2", @placeholder = "Código Postal", @id = "cp", @onchange = "myFunction(this.value)", @required = "required" })
                                </div>
                                <br />
                                <div>

                                    <input type="button" id="setText" class="checkout_input  checkout_address_3" value="Validar Código Postal" required="required">
                                </div>
                                <div>
                                    <!-- City / Town -->
                                    @Html.TextBoxFor(m => m.Estado, new { @class = "checkout_input checkout_address_2", @placeholder = "Estado", @id = "input", @required = "required", @readOnly = "readOnly" })

                                </div>
                                <div>
                                    @Html.TextBoxFor(m => m.Ciudad, new { @class = "checkout_input checkout_address_2", @placeholder = "Ciudad", @id = "input1", @required = "required", @readOnly = "readOnly" })
                                </div>
                                <br />
                                <div>
                                    <!-- Vecindario -->
                                    <select id="dropdown" name="Asentamiento" class="dropdown_item_select checkout_input" require="required"></select>
                                </div>
                                <br />
                                <div>
                                    <!-- Numero Telf -->
                                    @Html.TextBoxFor(m => m.NumTelefono, new { @class = "checkout_input", @placeholder = "Num. Teléfono", @required = "required" })

                                </div>
                                <br />
                                <div>
                                    <input type="hidden" name="accion" value=@ViewBag.accion>
                                    <input type="hidden" name="idPersona" value=@Model.IdPersona>
                                    <input type="submit" id="checkout_email" class="checkout_input" value="Guardar" required="required">
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>

            <!-- Footer -->

            <footer id="footer">

                <div class="footer-top">
                    <div class="container">
                        <div class="row">

                            <div class="col-lg-3 col-md-6 footer-contact">
                                <h3>MERX</h3>
                                <p>
                                    Paseo de los insurgentes 2210 <br>
                                    San José de Piletas, León<br>
                                    México <br><br>
                                    <strong>Telefono:</strong> +52 477 238 6919<br>
                                    <strong>Email:</strong>merxprojectbusiness@gmail.com<br>
                                </p>
                            </div>

                            <div class="col-lg-2 col-md-6 footer-links">
                                <h4>Enlaces</h4>
                                <ul>
                                    <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index", "Home")">Home</a></li>
                                    <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Index", "Home")">Acerca de nosotros</a></li>
                                    <li><i class="bx bx-chevron-right"></i> <a href="#">Servicios</a></li>
                                    <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Tienda", "Producto")">Tienda</a></li>
                                </ul>
                            </div>

                            <div class="col-lg-4 col-md-6 footer-newsletter">
                                <h4>Registrate</h4>
                                <p>Unete a la mejor página en la compra de muebles ecológicos.</p>
                                <form action="" method="post">
                                    <input type="email" name="email"><input type="submit" value="Suscribete" class="btn btn-comprar">
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="container d-md-flex py-4">

                    <div class="mr-md-auto text-center text-md-left">
                        <div class="copyright">
                            &copy; Copyright <strong><span>MERX</span></strong>. All Rights Reserved
                        </div>
                        <div class="credits">
                            <!-- All the links in the footer should remain intact. -->
                            <!-- You can delete the links only if you purchased the pro version. -->
                            <!-- Licensing information: https://bootstrapmade.com/license/ -->
                            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/bethany-free-onepage-bootstrap-theme/
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>-->
                            <!--<Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>-->

                        </div>
                    </div>
                    <!--
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
                -->
                </div>
            </footer><!-- End Footer -->
        </div>

    </div>

    <script src="~/Content/ProductAssets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/ProductAssets/styles/bootstrap-4.1.2/popper.js"></script>
    <script src="~/Content/ProductAssets/styles/bootstrap-4.1.2/bootstrap.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/greensock/TweenMax.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/greensock/TimelineMax.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/greensock/animation.gsap.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="~/Content/ProductAssets/plugins/easing/easing.js"></script>
    <script src="~/Content/ProductAssets/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Content/ProductAssets/js/checkout.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $dropdown = $("#dropdown").empty();
            var cp = $("#cp").val();
            console.log(cp.length);
            if (cp.length == 5 && /^[0-9]*$/.test(cp)) {
                var endpoint_sepomex = "https://api-sepomex.hckdrk.mx/query/";
                var method_sepomex = 'info_cp/';
                var url = endpoint_sepomex + method_sepomex + cp;
                $.getJSON(url, function (data) {
                    if (data[0].error) {
                        console.log('Algo salio mal');
                    } else {
                        $('#input').val(data[0].response.estado);
                        $('#input1').val(data[0].response.municipio);
                    }
                    $.each(data, function () {
                        $dropdown.append($("<option />").val(this.response.asentamiento).text(this.response.asentamiento));
                    });
                });
            }
            else {
                $('#input').val("");
                $('#input1').val("");
            }
        });

        $(document).ready(function () {
            $("#setText").click(function () {
                $dropdown = $("#dropdown").empty();
                var cp = $("#cp").val();
                console.log(cp.length);
                if (cp.length == 5 && /^[0-9]*$/.test(cp)) {
                    var endpoint_sepomex = "https://api-sepomex.hckdrk.mx/query/";
                    var method_sepomex = 'info_cp/';
                    var url = endpoint_sepomex + method_sepomex + cp;
                    $.getJSON(url, function (data) {
                        if (data[0].error) {
                            console.log('Algo salio mal');
                        } else {
                            $('#input').val(data[0].response.estado);
                            $('#input1').val(data[0].response.municipio);
                        }
                        $.each(data, function () {
                            $dropdown.append($("<option />").val(this.response.asentamiento).text(this.response.asentamiento));
                        });
                    });
                }
                else {
                    $('#input').val("");
                    $('#input1').val("");
                }
            });
        });

    </script>


</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}