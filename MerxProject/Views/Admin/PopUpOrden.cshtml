@using MerxProject.Models;
@{
    Layout = null;
    var Venta = ViewBag.Detalles;
}

<h2>PopUpEmpleados</h2>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="modal-dialog modal-lg" style="">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@ViewBag.title</h4>
                    </div>
                    <div class="modal-body">
                        <table class="table">

                            <tr>
                                <th>
                                    Producto
                                </th>
                                <th>
                                    Color
                                </th>
                                <th>
                                    Precio
                                </th>
                                <th>
                                    Cantidad
                                </th>
                            </tr>
                            @foreach (var item in Venta)
                            {
                                <tr>
                                    <td>
                                        @item.Producto
                                    </td>
                                    <td>
                                        @item.Color
                                    </td>
                                    <td>
                                        @item.Costo
                                    </td>
                                    <td>
                                        @item.Cantidad
                                    </td>
                                </tr>
                            }
                        </table>
                        <div>
                            <table class="table table-info">
                                <tr>
                                    <th>Total</th>
                                </tr>
                                <tr>
                                    <td>
                                        @ViewBag.Total
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

